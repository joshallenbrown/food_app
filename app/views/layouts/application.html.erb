<!DOCTYPE html>
<html>
  <head>
    <title>FoodApp</title>
    <%= csrf_meta_tags %>
	<p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Food App</a>
        </div> <!-- end div class="navbar-header" -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to "Browse Products", products_path %></li>
            <li><%= link_to "Sales" %></li>
            <li><%= link_to "Stores" %></li> <!-- Map of -->
            <li><%= link_to "Demos" %></li>
          </ul>
          <% if current_user %> 
            <p class="navbar-text pull-right"><%= current_user.email %> | <a href="<%= destroy_user_session_path %>">Sign Out</a></p>
          <% else %>
            <p class="navbar-text pull-right"><a href="<%= user_session_path %>">Sign In</a></p>
          <% end %>
        </div> <!-- end div class="collapse navbar-collapse" -->
      </div> <!-- end div class="container" -->
    </div> <!-- end div class="navbar navbar-default navbar-fixed-top" -->
    <%= yield %>
  </body>
</html>
